<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MailApp.Views.AddPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:MailApp.ViewModels"
    Title="Compose"
    BackgroundColor="White">
    <NavigationPage.TitleView>
        <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">
            <Label
                Grid.Column="0"
                FontSize="Large"
                Text="Compose"
                TextColor="White" />
            <ImageButton
                Grid.Column="1"
                Margin="0,0,10,0"
                BackgroundColor="Transparent"
                Command="{Binding PickImageCommand}"
                HeightRequest="40"
                HorizontalOptions="Center"
                Source="AttachIcon.png"
                VerticalOptions="Center" />
            <ImageButton
                Grid.Column="2"
                Margin="0,0,10,0"
                BackgroundColor="Transparent"
                Command="{Binding SendCommand}"
                HeightRequest="40"
                HorizontalOptions="Center"
                Source="SendIcon.png"
                VerticalOptions="Center" />
        </Grid>
    </NavigationPage.TitleView>
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Order="Secondary"
            Priority="0"
            Text="Settings" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Grid ColumnDefinitions="50, *" RowDefinitions="Auto, Auto, Auto">
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    FontSize="Body"
                    Text="From"
                    VerticalOptions="Center" />
                <Entry
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    FontSize="Body"
                    Text="{Binding From}" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    FontSize="Body"
                    Text="To"
                    VerticalOptions="Center" />
                <Entry
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    FontSize="Body"
                    Text="{Binding To}" />
                <Entry
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="10,0,10,0"
                    FontSize="Body"
                    Placeholder="Subject"
                    Text="{Binding Subject}" />
            </Grid>
            <Frame Padding="10" IsVisible="{Binding IsCollectionEmpty}">
                <StackLayout>
                    <Label
                        Margin="0,0,0,5"
                        FontSize="Body"
                        Text="Attachments" />
                    <CollectionView
                        HeightRequest="100"
                        ItemsSource="{Binding Images, Mode=OneWay}"
                        SelectedItem="{Binding SelectedImage}"
                        SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Image Margin="10" Source="{Binding .}" />
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>
            <Editor
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Margin="10,0,10,0"
                FontSize="Body"
                Placeholder="Compose email"
                Text="{Binding Body}"
                VerticalOptions="FillAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>